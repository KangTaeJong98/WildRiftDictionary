<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WildRiftDictionary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryVariant">@color/main</item>
        <item name="colorOnPrimary">@color/onMain</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main</item>
        <item name="colorSecondaryVariant">@color/sub</item>
        <item name="colorOnSecondary">@color/onMain</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/onMain</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="navigationViewStyle">@style/NavigationStyle</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/main</item>
        <item name="titleTextColor">@color/onMain</item>
    </style>

    <style name="NavigationStyle" parent="Widget.Design.NavigationView">
        <item name="itemTextColor">@color/onMain</item>
        <item name="itemIconTint">@color/onMain</item>
        <item name="android:background">@color/main</item>
    </style>
</resources>