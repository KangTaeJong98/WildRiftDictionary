<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Dialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:background">#000000</item>
    </style>

    <style name="DialogName" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#00ACC1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogTime" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">start</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_cool_time</item>
        <item name="android:textStyle">bold</item>
        <item name="drawableStartCompat">@drawable/ic_hourglass</item>

    </style>

    <style name="DialogCost" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">end</item>
        <item name="android:textColor">#FFB300</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="drawableEndCompat">@drawable/ic_coin</item>
    </style>

    <style name="DialogSkillCost" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">start</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="DialogAbility" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">start</item>
        <item name="android:textColor">#FFB300</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="DialogDescription" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">start</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>